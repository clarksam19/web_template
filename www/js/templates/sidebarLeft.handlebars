{{#with new}}
    
  {{#with ../this.add}}
      
    {{#with ../../this.base}}  
      <h1>{{sidebarLeftHeading}}</h1>
      {{#each this}}
        <a href="#">{{this}}</a>
      {{/each}}  
    {{else}}
      <h1>No text</h1>
    {{/with}}
  {{else}}
    <h1>Added to Sidebar</h1>
  {{/with}}
{{else}}
  <h1>New Sidebar</h1>
{{/with}}
